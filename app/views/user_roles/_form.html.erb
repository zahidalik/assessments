<%= form_for([user, user_role]) do |f| %>
  <%= f.collection_select :role_id, Role.order(:kind), :id, :kind, {include_blank: ""}, class: "mr-1 px-1 py-1 text-sm text-gray-700 rounded border border-gray-300 bg-gray-200" %>

  <%= f.submit "Add role", class: "bg-blue-700 px-1 text-sm text-gray-50" %>
<% end %>