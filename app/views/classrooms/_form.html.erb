<%= form_for([teacher, classroom], data: { controller: "handle-form", action: "turbo:submit-end->handle-form#submitEnd" }, html: {class: "bg-slate-100 rounded border border-gray-200 px-6 py-4 flex flex-col justify-center items-start space-y-2 shadow-xl"}) do |f| %>

  <%= link_to teacher_url(teacher), class: "text-gray-500" do %>
    <i class="fa-solid fa-arrow-up-from-bracket"></i>
  <% end %>

  <% if classroom.errors.any? %>
    <% classroom.errors.full_messages.each do |msg| %>
      <div class="bg-red-200 text-red-700 border border-red-700 px-2 py-1 lato-bold">
        <%= msg %>
      </div>
    <% end %>
  <% end %>
  
  <%= f.label :name, "Classroom", class: "text-gray-700 montserrat-regular font-bold" %>
  <%= f.text_field  :name, placeholder: "Form, Grade, KG", class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %>

  <%= f.label :section, class: "text-gray-700 montserrat-regular font-bold"%>
  <%= f.text_field :section, placeholder: "A, B, C, ...", class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %>

  <%= f.label :term, "Assessment Date", class: "text-gray-700 montserrat-regular font-bold" %>
  <%= f.date_field :term, class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700"  %>

  <%= f.submit yield(:button_name), class: "bg-blue-700 px-3 py-1 montserrat-regular rounded text-gray-50"%>
<% end %>