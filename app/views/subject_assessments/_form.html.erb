<%= form_for([teacher, classroom, subject_assessment], data: { controller: "handle-form", action: "turbo:submit-end->handle-form#submitEnd" }, html: {class: "flex flex-col items-start space-y-4"}) do |f| %>

  <% if subject_assessment.errors.any? %>
    <% subject_assessment.errors.full_messages.each do |msg| %>
      <div class="bg-red-200 text-red-700 border border-red-700 px-2 py-1 lato-bold">
        <%= msg %>
      </div>
    <% end %>
  <% end %>

  <%= f.text_field  :subject, placeholder: "Subject", class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %>
  <div class="flex flex-col space-y-1">
    <%= f.label :knowledge, class: "text-gray-700 montserrat-regular font-bold"%>
    <span class="bg-red-600 text-gray-50 px-1 py-1 rounded">Poor <%= f.radio_button :knowledge, 1, class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %></span>
    <span class="bg-yellow-600 text-gray-50 px-1 py-1 rounded">Satisfactory <%= f.radio_button :knowledge, 2, class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %></span>
    <span class="bg-green-500 text-gray-50 px-1 py-1 rounded">Good <%= f.radio_button :knowledge, 3, class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %></span>
    <span class="bg-green-600 text-gray-50 px-1 py-1 rounded">Very Good <%= f.radio_button :knowledge, 4, class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %></span>
    <span class="bg-green-700 text-gray-50 px-1 py-1 rounded">Excellent <%= f.radio_button :knowledge, 5, class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %></span>
  </div>
  <div class="flex flex-col space-y-1">
    <%= f.label :presentation, class: "text-gray-700 montserrat-regular font-bold"%>
    <span class="bg-red-600 text-gray-50 px-1 py-1">Poor <%= f.radio_button :presentation, 1, class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %></span>
    <span class="bg-yellow-600 text-gray-50 px-1 py-1 rounded">Satisfactory <%= f.radio_button :presentation, 2, class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %></span>
    <span class="bg-green-500 text-gray-50 px-1 py-1 rounded">Good <%= f.radio_button :presentation, 3, class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %></span>
    <span class="bg-green-600 text-gray-50 px-1 py-1 rounded">Very Good <%= f.radio_button :presentation, 4, class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %></span>
    <span class="bg-green-700 text-gray-50 px-1 py-1 rounded">Excellent <%= f.radio_button :presentation, 5, class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %></span>
  </div>
  <div class="flex flex-col space-y-1">
    <%= f.label :clear_explanation, class: "text-gray-700 montserrat-regular font-bold"%>
    <span class="bg-red-600 text-gray-50 px-1 py-1 rounded">Poor <%= f.radio_button :clear_explanation, 1, class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %></span>
