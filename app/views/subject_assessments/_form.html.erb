  </div>
  <div class="flex flex-col space-y-1">
    <%= f.label :akhlaq_and_behaviour, class: "text-gray-700 montserrat-regular font-bold"%>
    <span class="bg-red-600 text-gray-50 px-1 py-1 rounded">Poor <%= f.radio_button :akhlaq_and_behaviour, 1, class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %></span>
    <span class="bg-yellow-600 text-gray-50 px-1 py-1 rounded">Satisfactory <%= f.radio_button :akhlaq_and_behaviour, 2, class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %></span>
    <span class="bg-green-500 text-gray-50 px-1 py-1 rounded">Good <%= f.radio_button :akhlaq_and_behaviour, 3, class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %></span>
    <span class="bg-green-600 text-gray-50 px-1 py-1 rounded">Very Good <%= f.radio_button :akhlaq_and_behaviour, 4, class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %></span>
    <span class="bg-green-700 text-gray-50 px-1 py-1 rounded">Excellent <%= f.radio_button :akhlaq_and_behaviour, 5, class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %></span>
  </div>
  <div class="flex flex-col space-y-1">
    <%= f.label :communication_with_students, class: "text-gray-700 montserrat-regular font-bold"%>
    <span class="bg-red-600 text-gray-50 px-1 py-1 rounded">Poor <%= f.radio_button :communication_with_students, 1, class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %></span>
    <span class="bg-yellow-600 text-gray-50 px-1 py-1 rounded">Satisfactory <%= f.radio_button :communication_with_students, 2, class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %></span>
    <span class="bg-green-500 text-gray-50 px-1 py-1 rounded">Good <%= f.radio_button :communication_with_students, 3, class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %></span>
    <span class="bg-green-600 text-gray-50 px-1 py-1 rounded">Very Good <%= f.radio_button :communication_with_students, 4, class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %></span>
