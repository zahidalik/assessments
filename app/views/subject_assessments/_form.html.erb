  <%= f.text_field :remarks, placeholder: "Remarks", class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %>
  
  <%= f.submit yield(:button_name), class: "bg-cyan-700 px-3 py-1 montserrat-regular rounded text-gray-50"%>

