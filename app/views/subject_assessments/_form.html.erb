  </div>
  <div class="flex flex-col space-y-1">
    <%= f.label :hygiene_and_personality, class: "text-gray-700 montserrat-regular font-bold"%>
    <span class="bg-red-600 text-gray-50 px-1 py-1 rounded">Poor <%= f.radio_button :hygiene_and_personality, 1, class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %></span>
    <span class="bg-yellow-600 text-gray-50 px-1 py-1 rounded">Satisfactory <%= f.radio_button :hygiene_and_personality, 2, class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %></span>
