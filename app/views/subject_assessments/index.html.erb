<div class="min-h-screen">
  <div class="mt-8 flex flex-col justify-center items-center oswald-light space-y-2 ">
    <%= link_to teacher_path(@teacher), class: "bg-blue-700 px-3 py-1 text-4xl text-gray-50 shadow-xl" do %>
      <%= @teacher.name %>
    <% end %>
    <div class="text-3xl font-bold text-gray-700"><%= @classroom.name %> <%= @classroom.section %></div>
    <div class="text-xl"><%= @classroom.term.inspect %></div>
  </div>
  <div class="mt-4">
    <div class="flex flex-col justify-start items-center">
    <%= turbo_frame_tag "subject_assessments" do %>
      <%= turbo_frame_tag "subject_assessments_counts" do %>
        <div class="bg-gray-300 px-2">Total number of assessments submitted: <%= @subject_assessments.count %></div>
      <% end %>
      <% @subject_assessments.each do |assessment| %>
        <%= render "subject_assessments/subject_assessment", teacher: @teacher, classroom: @classroom, assessment: assessment %>
      <% end %>
    <% end %>
  </div>
  </div>
</div>