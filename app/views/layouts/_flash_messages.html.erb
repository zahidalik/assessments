<div data-controller="autohide">
  <% flash.each do |key, value| %>
    <div class="<%= key == 'notice' ? 'bg-green-700 px-3 py-2 md:px-4 md:py-3 text-gray-50 text-lg absolute z-10 right-4 md:right-10 rounded-lg' : 'bg-red-600 px-3 py-2 md:px-4 md:py-3 text-red-50 text-lg absolute z-10 right-4 md:right-10 rounded-lg' %>" id="<%= key %>">
      <%= value %>
    </div>
  <% end %>
</div>
 