<% provide(:button_name, "Add Teacher") %>

<%= turbo_frame_tag "new_teacher" do %>
  <div>
    <%= form_for @teacher, html: {class: "bg-slate-100 rounded border border-gray-200 px-6 py-3 flex flex-col justify-center items-start space-y-2 shadow-xl"} do |f| %>
      <% if @teacher.errors.any? %>
        <% @teacher.errors.full_messages.each do |msg| %>
          <div class="bg-red-200 text-red-700 border border-red-700 px-2 py-1 lato-bold">
            <%= msg %>
          </div>
        <% end %>
      <% end %>

      <%= f.label :name, "Name", class: "text-gray-700 montserrat-regular font-bold" %>
      <%= f.text_field :name, class: "text-gray-700 px-2 montserrat-regular text-lg border border-gray-300 rounded outline-none focus:border-blue-700" %>

      <%= f.submit yield(:button_name), class: "bg-blue-700 px-3 py-1 montserrat-regular rounded text-gray-50" %>
    <% end %>
  </div>
<% end %>