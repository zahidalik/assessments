<div class="min-h-screen">
  <div class="md:grid md:grid-cols-11">
    <div class="md:min-h-screen md:col-span-3 md:border-r md:border-gray-300 md:rounded-lg md:justify-start">
      <% if current_user.is_super_admin? || current_user.is_admin? %>
        <div class="mt-16 flex flex-col items-center">
          <%= turbo_frame_tag "new_teacher" do %>
            <%= link_to new_teacher_path, class: "px-3 py-2 bg-blue-700 text-gray-50 montserrat-regular rounded" do %>
              New Teacher
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="mt-16 flex flex-col items-center">
          <div class="montserrat-regular text-gray-700">
            You are viewing as guest user.
          </div>
        </div>
      <% end %>
    </div>

    <div class="md:col-span-8 md:justify-start">
      <div class="mt-8 md:mt-12 md:ml-20 oswald-light text-3xl text-gray-700 flex flex-col">
        <span class="text-center md:text-left md:indent-8">All Teachers</span>
        <div class="mt-8 indent-10 md:indent-0">
          <%= turbo_frame_tag "teachers" do %>
            <% @teachers.each do |teacher| %>
              <div class="flex flex-col space-y-1 md:space-y-3">  
                <%= render "teachers/teacher", teacher: teacher %> 
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
